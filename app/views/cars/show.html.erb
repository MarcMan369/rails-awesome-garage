<h2><%= @car.brand %></h2>
<h3><%= @car.model %></h3>
<p><%= @car.fuel %></p>
<p><%= @car.year %></p>

<div class="review-form">
  <%= simple_form_for [@car, @review] do |f| %>
    <%= f.input :comment, label: false, placeholder: "Comment here!", class: "comment-box" %>
    <%= f.input :rating, collection: 0..5, label: false %>
    <%= f.submit 'Add review', class: "add-review-btn" %>
  <% end %>
</div>

<div class="reviews">
  <% @car.reviews.each do |review| %>
    <p><%= review.comment %></p>
    <p>
      <% review.rating.times do %>
        <i class="fa fa-star"></i>
      <% end %>
    </p>
  <% end %>
</div>

<% if @car.favourite.empty? %>
  <div class="save-to-garage">
    <%= simple_form_for [@car, @favourite] do |f| %>
      <%= f.submit 'Save to my garage', class: "save-to-garage-btn" %>
    <% end %>
  </div>
<% else %>
  <p>This car is in your garage</p>
<% end %>
